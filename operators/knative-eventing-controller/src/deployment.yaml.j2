apiVersion: apps/v1
kind: Deployment
metadata:
  name: [[ name ]]
  namespace: [[ namespace ]]
  labels:
    eventing.knative.dev/release: devel
    knative.dev/high-availability: "true"
    app.kubernetes.io/component: eventing-controller
    app.kubernetes.io/version: devel
    app.kubernetes.io/name: [[ name ]]
spec:
  selector:
    matchLabels:
      app: [[ name ]] 
  template:
    metadata:
      labels:
        app: [[ name ]]
        eventing.knative.dev/release: devel
        app.kubernetes.io/component: eventing-autoscaler
        app.kubernetes.io/version: devel
        app.kubernetes.io/name: [[ name ]]
    spec:
      # To avoid node becoming SPOF, spread our replicas to different nodes.
      affinity:
        podAntiAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - podAffinityTerm:
              labelSelector:
                matchLabels:
                  app: [[ name ]]
              topologyKey: kubernetes.io/hostname
            weight: 100

      serviceAccountName: eventing-controller
      enableServiceLinks: false
      containers:
      - name: [[ name ]]
        terminationMessagePolicy: FallbackToLogsOnError
        image: gcr.io/knative-releases/knative.dev/eventing/cmd/controller@sha256:8fbc48f6fa901877890cdc628e31d341d2af46107905970eef9a90f9e1a9622d

        resources:
          requests:
            cpu: 100m
            memory: 100Mi

        env:
          - name: SYSTEM_NAMESPACE
            valueFrom:
              fieldRef:
                fieldPath: metadata.namespace
          - name: CONFIG_LOGGING_NAME
            value: eventing-config-logging
          - name: CONFIG_OBSERVABILITY_NAME
            value: eventing-config-observability
          - name: METRICS_DOMAIN
            value: knative.dev/eventing
          # APIServerSource
          - name: APISERVER_RA_IMAGE
            value: gcr.io/knative-releases/knative.dev/eventing/cmd/apiserver_receive_adapter@sha256:ed066b055b294f8317e485fcbb832e3d3f12bd7028d6cf2d68f361634a26130c
          - name: POD_NAME
            valueFrom:
              fieldRef:
                fieldPath: metadata.name


##         Adapter settings
#          - name: K_LOGGING_CONFIG
#            value: ''
#          - name: K_LEADER_ELECTION_CONFIG
#            value: ''
#          - name: K_NO_SHUTDOWN_AFTER
#            value: ''
##           Time in seconds the adapter will wait for the sink to respond. Default is no timeout
#          - name: K_SINK_TIMEOUT
#            value: ''

        securityContext:
          allowPrivilegeEscalation: false
          readOnlyRootFilesystem: true
          runAsNonRoot: true
          capabilities:
            drop:
            - all

        ports:
        - name: metrics
          containerPort: 9090
        - name: profiling
          containerPort: 8008
